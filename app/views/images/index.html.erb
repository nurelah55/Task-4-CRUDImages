<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,
    initial-scale=1.0">
    <title><%= content_for?(:title) ?
    yield(:title) : "Myapp" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head> 
  <body >
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
           	<% @images.each do |image| %>				
			  <div class="col-sm-3 col-md-2">
			    <div class="thumbnail">
			    	<%=link_to image_tag(image.avatar.url(:thumb)), image.avatar.url(:original), :popup=>['original_image', 'height=400,width=200'] %>
			    	
				
			      <div class="caption">
			       	<%= image.title %>
			        <p>
						<span><%= link_to 'edit', edit_image_path(image.id)%></span>
						<span>|</span>
						<span><%= link_to 'delete', image_path(image.id), method: "DELETE", data: {confirm: 'Delete this data ?'} %></span>
					</p>
			       </div>
			    </div>
			  </div>			
				<% end %>
              <%= yield %>
              
          </div>
          <footer>

          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>
